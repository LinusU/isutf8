{
  "name": "isutf8",
  "description": "Check if a Buffer is utf-8",
  "version": "1.0.11",
  "author": {
    "name": "Denis Seleznev",
    "email": "hcodes@yandex.ru",
    "url": "https://github.com/hcodes"
  },
  "main": "index.js",
  "homepage": "https://github.com/hcodes/isutf8",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/hcodes/isutf8/blob/master/LICENSE"
    }
  ],
  "repository": {
    "type": "git",
